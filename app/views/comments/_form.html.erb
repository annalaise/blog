<div class="container">
  <%= form_for [ @article, @comment ] do |f| %>
    <div class="form-group row">
     <%= f.label :author_name, class: "col-sm-2 col-form-label" %>
     <div class="col-sm-10">
       <%= f.text_field :author_name, class: "form-control" %>
     </div>
   </div>

     <div class="form-group row">
      <%= f.label :body, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_area :body, class: "form-control", rows: 3 %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10"></div>
      <div class="col-sm-2">
       <%= f.submit 'Submit', class: "btn btn-dark" %>
      </div>
    </div>
  <% end %>
  <hr>
</div>
